var React = require('react');
var IngredientList = require('./IngredientList.js');

var RecipeItem = React.createClass({
  handleClick: function (e, ingredients, index) {
    this.props.nextLevelProp(e, index, ingredients);
  },
  render: function () {
    return (
      <span>
        <input
          type="checkbox"
          onChange={this.handleClick.bind(null, this.props.recipeInfo.ingredients, this.props.indexRecipe)}
          ref={recipe + this.props.indexRecipe}
        >
        </input>
      <h4 ref={this.props.indexRecipe}>
        {this.props.recipeInfo.name}
        {this.props.recipeInfo.type}
        {this.props.recipeInfo.cook_time}
      </h4>
      {
        this.props.selectionIndex.indexOf(this.props.indexRecipe) >= 0 && <IngredientList ingredients={this.props.recipeInfo.ingredients} />
      }
      </span>
    );
  }
});

module.exports = RecipeItem;
